                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hj_btn_bind_change"
                            android:textColor="@color/hj_base_white"
                            android:textSize="@dimen/hj_font_size" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
