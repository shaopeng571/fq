<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
      >
	<RelativeLayout
	    android:id="@+id/option_item_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:clickable="true"
	    android:descendantFocusability="blocksDescendants"
	    android:paddingLeft="5dp"
	   
>

		<ImageView 
		    android:id="@+id/option_item_del" 
		    android:layout_width="20dp" 
		    android:layout_height="20dp" 
			android:layout_alignParentRight="true" 
			android:focusable="false"
			android:src="@drawable/hj_accountdelete"
			android:scaleType="centerCrop"
			android:visibility="gone"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"/>
		<TextView 
		    android:id="@+id/option_item_text"  
		    android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:paddingTop="12dp"
			android:paddingBottom="12dp"
			android:layout_centerVertical="true"
			 android:layout_marginLeft="33dp"
			android:textSize="@dimen/hj_font_size"
			android:textColor="@color/hj_base_black"
			/>
	</RelativeLayout>
</LinearLayout>
